<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{# {{ parent() is calling arrent includes}} #}
			<link href="{{ asset('site.css') }}" rel="stylesheet">
			<link href="{{ asset('responsive.css') }}" rel="stylesheet">
			<link href="{{ asset('homePage.css') }}" rel="stylesheet">
			<link href="{{ asset('details.css') }}" rel="stylesheet">
			<link href="{{ asset('style.css') }}" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		{% block body %}
			{% block header %}
				<nav>
					<a href={{path("home_auth")}}>Theater</a>
					{% if app.user %}
						<a href={{path("home_auth")}}>Welcome: {{app.user.username}}</a>
					{% endif %}
					<ul>
						<li><a href={{path('home_auth')}}>Home</a></li>
						{% if app.user %}
						<li><a href={{path('app_logout')}}>Logout</a></li>	
						{% else %}
						<li><a href={{path('app_login')}}>Login</a></li>
						<li><a href={{path('register')}}>Register</a></li>	
						{% endif %}
						{# https://symfonycasts.com/screencast/symfony-security/dynamic-roles#play #}
					</ul>
				</nav>
			{% endblock %}
			{% block notifications %}
				<section class="notifications error">
					<p>Message...</p>
				</section>
			{% endblock %}
			{% block content %}{% endblock %}
			{% block footer %}
				<footer>
					<div>Â© 2020
						<a href="https://softuni.bg/courses/js-back-end">JS Back-End</a>
					</div>
				</footer>
			{% endblock %}
		{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
