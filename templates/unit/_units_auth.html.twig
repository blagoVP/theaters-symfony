{% if plays|length > 0 %}
    {% for play in plays %}
        <div>
            <div class="home-image">
                <img src={{play.imageUrl}} alt="Card image cap">
            </div>
            <div class="info">
                <h4>{{play.title}}</h4>
                    <div class="info-buttons">
                        <a class="btn details" href={{path("details_page", {id: play.id})}}>Details</a>
                            <span class="likes">{{play.usersLiked|length}} likes</span>
                    </div>
            </div>
        </div>                   

    {% endfor %}    
{% else %}
    <h4>No plays yet...</h4>
{% endif %}
