{% extends "base.html.twig" %}
{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('create-theater.css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
<div class="theater-form">
    {{form_start(form)}}
        <h1>Create Theater</h1>
        <div class="form-error">
            {{ form_errors(form) }}
        </div>
        <div>
            {{form_row(form.title)}}
        </div>
        <div>
            {{form_row(form.description)}}
        </div>
        <div>
            {{form_row(form.imageUrl)}}
        </div>
        {# {{form_row(form._token)}}  #}
        {{form_row(form.submit)}}
    {{form_end(form)}}
</div>
{% endblock %}
